<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Properties>
        <Property name="filename">logs/${sys:filename:-default.log}</Property>
    </Properties>

    <Appenders>

        <Console name="Console" target="SYSTEM_OUT">\
            <PatternLayout disableAnsi = "false" pattern="%highlight{%C %d %F %M %L} - %msg%n"/>
        </Console>

        <RollingFile name="RollingFile" fileName="logs/app.log"
                     filePattern="logs/app-%d{MM-dd-yyyy}-%i.log">

            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>

            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="2.5 KB"/>
            </Policies>

        </RollingFile>



    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
            <ContextMapFilter onMatch="ACCEPT" onMismatch="DENY" operator="or">
                <KeyValuePair key="foo" value="bar"/>
                <KeyValuePair key="User2" value="WARN"/>
            </ContextMapFilter>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>

</Configuration>